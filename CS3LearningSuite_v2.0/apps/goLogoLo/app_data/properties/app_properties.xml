<?xml version="1.0" encoding="UTF-8"?>
<!--
    This XML file allows us to easily customize the look and language used
    in our program's user interface. Note that this properties file is only
    for the standard controls for an app from the Desktop Java Framework, so
    it would not include things initialized for the workspace, which is
    customizable.
-->
<properties>
    <property_list>        
        <!-- DESKTOP JAVA FRAMEWORK CONTROLS SETTINGS -->
        <property name="APP_TITLE"	    value="goLogoLo"></property>
        <property name="APP_BANNER"         value="GoLogoLoWelcomeBanner.png"></property>
	<property name="APP_LOGO"	    value="GoLogoLoLogo.png"></property>
        <property name="APP_EXPORT_PAGE"    value="index.html"></property>
        <property name="APP_HELP_PAGE"      value="Help.html"></property>
        <property name="APP_ABOUT_PAGE"     value="About.html"></property>
	<property name="APP_CSS"	    value="glgl_style.css"></property>
        <property name="APP_PATH_CSS"	    value="workspace/style/"></property>
        <property name="APP_PATH_EXPORT"    value="./export/"></property>
        <property name="APP_PATH_ICONS"     value="./images/icons/"></property>
        <property name="APP_PATH_IMAGES"    value="./images/"></property>
        <property name="APP_PATH_WEB"       value="./app_data/web/"></property>
        <property name="PREF_WIDTH"         value="1400"></property>
        <property name="PREF_HEIGHT"        value="930"></property>
        <property name="START_MAXIMIZED"    value="false"></property>

        <!-- TOP TOOLBARS AND CONTROLS TO INCLUDE -->
        <property name="HAS_WELCOME_DIALOG"     value="true"></property>
        <property name="HAS_TITLE_LABEL"        value="true"></property>
        <property name="HAS_TOP_TOOLBAR"        value="true"></property>        
        <property name="HAS_FILE_TOOLBAR"       value="true"></property>
        <property name="HAS_NEW"                value="true"></property>
        <property name="HAS_LOAD"               value="true"></property>
        <property name="HAS_CLOSE"              value="true"></property>
        <property name="HAS_SAVE"               value="true"></property>
        <property name="HAS_SAVE_AS"            value="true"></property>
        <property name="HAS_EXPORT"             value="true"></property>
        <property name="HAS_EXIT"               value="true"></property>
        <property name="HAS_CLIPBOARD_TOOLBAR"  value="true"></property>
        <property name="HAS_UNDO_TOOLBAR"       value="true"></property>
        <property name="HAS_HELP_TOOLBAR"       value="true"></property>
        <property name="HAS_HELP"               value="true"></property>
        <property name="HAS_LANGUAGE"           value="true"></property>
        <property name="HAS_ABOUT"              value="true"></property>


        <!-- PROGRAM ICON FILES - FILE TOOLBAR -->        
        <property name="NEW_BUTTON_ICON"        value="New.png"></property>
        <property name="LOAD_BUTTON_ICON"       value="Load.png"></property>
        <property name="CLOSE_BUTTON_ICON"      value="Close.png"></property>
        <property name="SAVE_BUTTON_ICON"       value="Save.png"></property>
        <property name="SAVE_AS_BUTTON_ICON"    value="SaveAs.png"></property>
        <property name="EXPORT_BUTTON_ICON"     value="Export.png"></property>
        <property name="EXIT_BUTTON_ICON"       value="Exit.png"></property>

        <!-- PROGRAM ICON FILES - CUT/COPY/PASTE TOOLBAR -->        
        <property name="CUT_BUTTON_ICON"        value="Cut.png"></property>
        <property name="COPY_BUTTON_ICON"       value="Copy.png"></property>
        <property name="PASTE_BUTTON_ICON"      value="Paste.png"></property>
        
        <!-- PROGRAM ICON FILES - ZOOM TOOLBAR -->        
        <property name="ZOOM_IN_BUTTON_ICON"        value="ZoomIn.png"></property>
        <property name="ZOOM_OUT_BUTTON_ICON"       value="ZoomOut.png"></property>
        <property name="RESIZE_BUTTON_ICON"      value="Resize.png"></property>
        <property name="RESET_VIEW_BUTTON_ICON"      value="ResetView.png"></property>


        <!-- PROGRAM ICON FILES - UNDO/REDO TOOLBAR -->        
        <property name="UNDO_BUTTON_ICON"       value="Undo.png"></property>
        <property name="REDO_BUTTON_ICON"       value="Redo.png"></property>
        
        <!-- PROGRAM ICON FILES - FILE TOOLBAR -->        
        <property name="LANGUAGE_BUTTON_ICON"   value="Language.png"></property>
        <property name="HELP_BUTTON_ICON"       value="Help.png"></property>
        <property name="ABOUT_BUTTON_ICON"      value="About.png"></property>

        <!-- GLGL ITEM BUTTONS TOOLBAR -->
        <property name="GLGL_EDIT_ITEM_BUTTON_ICON"         value="EditItem.png"></property>
        <property name="GLGL_MOVE_ITEM_UP_BUTTON_ICON"      value="MoveUp.png"></property>
        <property name="GLGL_MOVE_ITEM_DOWN_BUTTON_ICON"    value="MoveDown.png"></property>
        
        <!-- GLGL FUNCTION PANE BUTTONS -->        
        <property name="GLGL_ADD_TEXT_BUTTON_ICON"              value="AddText.png"></property>
        <property name="GLGL_ADD_IMAGE_BUTTON_ICON"             value="AddImage.png"></property>
        <property name="GLGL_ADD_RECTANGLE_BUTTON_ICON"         value="AddRectangle.png"></property>
        <property name="GLGL_ADD_CIRCLE_BUTTON_ICON"            value="AddCircle.png"></property>
        <property name="GLGL_ADD_TRIANGLE_BUTTON_ICON"          value="AddTriangle.png"></property>
        <property name="GLGL_REMOVE_BUTTON_ICON"                value="Remove.png"></property>
        <property name="GLGL_BOLD_BUTTON_ICON"                  value="Bold.png"></property>
        <property name="GLGL_ITALIC_BUTTON_ICON"                value="Italic.png"></property>
        <property name="GLGL_INCREASE_FONT_SIZE_BUTTON_ICON"    value="IncreaseFontSize.png"></property>
        <property name="GLGL_DECREASE_FONT_SIZE_BUTTON_ICON"    value="DecreaseFontSize.png"></property>
        <property name="GLGL_UNDERLINE_BUTTON_ICON"             value="Underline.png"></property>
        

        <!-- GLGL FONT OPTIONS -->       
        <property name="GLGL_DEFAULT_FONT"                       value="Helvetica"></property> 
        <property name="GLGL_DEFAULT_FONT_SIZE"                  value="10"></property> 
        
        <property name="GLGL_DEFAULT_CYCLE_METHOD"                  value="NO_CYCLE"></property> 




        <!-- THIS IS THE FILE WE'LL USE TO MAKE OUR EXPORTED WEB FILE -->
        <property name="GLGL_EXPORT_TEMPLATE_FILE_NAME"  value="ToDoTemplate.html"></property>     

        <!-- ENGLISH IS THE DEFAULT -->
        <property name="DEFAULT_LANGUAGE"               value="English"></property>
        <property name="ENGLISH_ABBREVIATION"           value="EN"></property>
        <property name="KOREAN_ABBREVIATION"            value="KO"></property>
        <property name="SPANISH_ABBREVIATION"           value="ES"></property>
        
        
        
        <property name="GLGL_DEFAULT_HEIGHT"                value="300"></property>
        <property name="GLGL_DEFAULT_WIDTH"                 value="700"></property>

    </property_list>
    <property_options_list>
        <property_options name="LANGUAGE_OPTIONS">
            <option>English</option>
            <option>Korean</option>
            <option>Spanish</option>
        </property_options>
        
        <property_options name="GLGL_FONT_OPTIONS">
            <option>Helvetica</option>
            <option>Times New Roman</option>
            <option>Arial</option>
            <option>Calibri</option>
        </property_options>
        
        <property_options name="GLGL_FONT_SIZE_OPTIONS">
            <option>6</option>
            <option>8</option>
            <option>10</option>
            <option>12</option>
            <option>14</option>
            <option>16</option>
            <option>18</option>
            <option>20</option>
        </property_options>
        
        <property_options name="GLGL_CYCLE_METHOD_OPTIONS">
            <option>NO_CYCLE</option>
        </property_options>
    </property_options_list>
</properties>